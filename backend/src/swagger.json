{
  "openapi": "3.0.0",
  "info": {
    "title": "Sistema de Gestão de Usuários API",
    "description": "Documentação da API de gerenciamento de usuários e auditoria.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3333",
      "description": "Servidor de Desenvolvimento"
    }
  ],
  "paths": {
    "/sessions": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Realiza login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "admin@example.com" },
                  "password": { "type": "string", "example": "123456" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Token gerado com sucesso" },
          "401": { "description": "Credenciais inválidas" }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["Administração"],
        "summary": "Lista usuários (Paginado)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } }
        ],
        "responses": {
          "200": { "description": "Lista de usuários" },
          "403": { "description": "Acesso negado (Não é ADMIN)" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}