{
  "openapi": "3.0.0",
  "info": {
    "title": "Sistema de Gestão de Usuários API",
    "description": "API completa com autenticação JWT, registro de usuários e gerenciamento administrativo (RBAC).",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3333",
      "description": "Servidor Local"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": ["Usuários"],
        "summary": "Registrar um novo usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password_hash"],
                "properties": {
                  "email": { "type": "string", "example": "admin@example.com" },
                  "password_hash": { "type": "string", "example": "12345678" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário criado com sucesso" },
          "409": { "description": "E-mail já cadastrado" },
          "400": { "description": "Dados de validação incorretos" }
        }
      },
      "get": {
        "tags": ["Administração"],
        "summary": "Listagem paginada de usuários",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Número da página para paginação",
            "schema": { "type": "integer", "default": 1 }
          }
        ],
        "responses": {
          "200": { "description": "Lista de usuários retornada" },
          "403": { "description": "Acesso negado - Requer privilégios de ADMIN" }
        }
      }
    },
    "/sessions": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Realiza login e gera o token JWT",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password_hash"],
                "properties": {
                  "email": { "type": "string", "example": "admin@example.com" },
                  "password_hash": { "type": "string", "example": "12345678" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login realizado com sucesso" },
          "400": { "description": "Credenciais inválidas" }
        }
      }
    },
    "/logout": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Encerra a sessão do usuário",
        "responses": {
          "200": { "description": "Logout realizado com sucesso" }
        }
      }
    },
    "/me": {
      "get": {
        "tags": ["Perfil"],
        "summary": "Obtém dados do usuário logado",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Dados do perfil retornados" },
          "401": { "description": "Não autorizado" }
        }
      }
    },
    "/users/{userId}/role": {
      "patch": {
        "tags": ["Administração"],
        "summary": "Altera o cargo (Role) de um usuário",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["role"],
                "properties": {
                  "role": { "type": "string", "enum": ["ADMIN", "USER"] }
                }
              }
            }
          }
        },
        "responses": {
          "204": { "description": "Cargo atualizado com sucesso" },
          "404": { "description": "Usuário não encontrado" }
        }
      }
    },
    "/users/{userId}": {
      "delete": {
        "tags": ["Administração"],
        "summary": "Remove um usuário do sistema",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "204": { "description": "Usuário deletado com sucesso" },
          "404": { "description": "Usuário não encontrado" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}